# ─────────────────────────────────────────────────────────────────────────────
# http-honeypot — environment variable reference
# Copy this file to .env and fill in your values.
# The .env file is loaded automatically by docker-compose.
# ─────────────────────────────────────────────────────────────────────────────

# ── General ──────────────────────────────────────────────────────────────────
NAME=my-honeypot
HONEYPOT_PORT=80

# ── Tar-pit ───────────────────────────────────────────────────────────────────
TAR_PIT_MAX_SEC=20

# ── Rate limiting ─────────────────────────────────────────────────────────────
RATE_LIMIT_PER_MIN=1000

# ── Logging ───────────────────────────────────────────────────────────────────
# Set true to disable ALL file logging (Pushover/webhooks still fire).
LOG_DISABLED=false
LOG_MAX_SIZE_MB=100

# ── Pushover ──────────────────────────────────────────────────────────────────
PUSHOVER_APP=
PUSHOVER_RECIPIENT=
# ISO 3166-1 alpha-2 (e.g. DE  US  CN  RU). Throttled to once per hour.
PUSHOVER_NOTIFY_COUNTRY=

# ── Webhook ───────────────────────────────────────────────────────────────────
WEBHOOK_URL=
WEBHOOK_SECRET=
# Optional: Rate limit webhook calls per IP (seconds between calls). Leave empty for no limit.
WEBHOOK_URL_RATE_LIMIT_SEC=

# ── Webhook for New/Unknown URLs ──────────────────────────────────────────────
# This webhook is called synchronously for URLs that don't match any trap.
# It can return a custom response (JSON or plain text/HTML).
WEBHOOK_NEW_URL=
WEBHOOK_NEW_URL_SECRET=
# Cache responses for identical paths (seconds). Default: 60
WEBHOOK_NEW_URL_CACHE_SEC=60
# Timeout for webhook call (seconds). Default: 5
WEBHOOK_NEW_URL_TIMEOUT_SEC=5
# Redirect to / instead of 404 when webhook doesn't respond or returns no custom response
DEFAULT_REDIRECT=false

# ── Prometheus /metrics ────────────────────────────────────────────────────────
# Change both before exposing to the internet!
METRICS_USER=admin
METRICS_PASSWORD=password
METRICS_REALM=Prometheus Server
METRICS_DISABLED=false

# ── AbuseIPDB ──────────────────────────────────────────────────────────────────
# Get your API key at https://www.abuseipdb.com/
# Leave empty to disable automatic reporting.
ABUSEIPDB_KEY=
# Cooldown in seconds before reporting the same IP again. Default = 86400 (24h).
ABUSEIPDB_SLEEP=86400
